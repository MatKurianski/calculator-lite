<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="2" android:background="#4DB6AC" android:id="@+id/scroll">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:layout_gravity="right" android:orientation="vertical" android:gravity="right">
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/resultDisplay" android:layout_weight="1"
                    android:gravity="bottom" android:paddingBottom="16dp"
                    android:paddingRight="32dp" android:textSize="54sp" android:background="#4DB6AC"
                    android:textColor="@android:color/white" android:singleLine="true"
                    android:foregroundGravity="right" android:textAlignment="textEnd" android:paddingLeft="32dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="CLEAR"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonClear" android:layout_weight="2"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="clearResultDisplay"/>
        <Button
                android:text="("
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonLeftParen" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text=")"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonRightParen" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="onButtonPressed"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button7" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button8" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button9" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonDivide" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="onButtonPressed"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button4" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button5" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button6" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="*"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonMultiply" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="onButtonPressed"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button1" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button2" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button3" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonMinus" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18dp"
                android:onClick="onButtonPressed"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/button0" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="30sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text=","
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonColon" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18sp"/>
        <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonPlus" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18sp"
                android:onClick="onButtonPressed"/>
        <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/buttonEqual" android:layout_weight="1"
                android:background="#00897B" android:textColor="@android:color/white" android:textSize="18sp"
                android:onClick="onEqualButtonPressed"/>
    </LinearLayout>
</LinearLayout>